@model UserModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/Login.css" />
    <link href="~/css/tabler.min.css" rel="stylesheet" />
    <link href="~/css/tabler-vendors.min.css" rel="stylesheet" />
    <link href="~/css/demo.min.css" rel="stylesheet" />
</head>
<body class=" d-flex flex-column">
    <script src="~/js/demo-theme.min.js"></script>
    <div class="page page-center">
        <div class="container container-normal py-4">
            <div class="row align-items-center g-4">
                <div class="col-lg">
                    <div class="container">
                        <div class="text-center mb-4">
                            <div class="row">
                                <div class="col-5">
                                </div>
                                <div class="col-2 bg-primary">
                                    <a href="." class="navbar-brand navbar-brand-autodark"><img src="~/img/logo.png" height="100" alt="Logo"></a>
                                </div>
                                <div class="col-5">
                                </div>
                            </div>
                        </div>
                        <div class="card card-md">
                            <div class="card-body">
                                @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="row jumbotron">
                                        <div class="col-sm-12 mx-t3 mb-4">
                                            <h2 class="text-center text-info">Kayıt Ol</h2>
                                            <h3 class="text-center text-danger">@ViewBag.Message</h3>
                                        </div>
                                        <div class="col-sm-6 form-group">
                                            <label for="name-f">Adınız</label>
                                            <input type="text" class="form-control" name="Username" id="Username" placeholder="Adınızı Giriniz." required>
                                        </div>
                                        <div class="col-sm-6 form-group">
                                            <label for="name-l">Soy adınız</label>
                                            <input type="text" class="form-control" name="Lastname" id="Lastname" placeholder="Soyadınızı Giriniz." required>
                                        </div>
                                        <div class="col-sm-6 form-group">
                                            <label for="email">Email</label>
                                            <input type="text" class="form-control" name="Email" id="email" placeholder="Mailinizi Giriniz." required>
                                        </div>
                                        <div class="col-sm-6 form-group">
                                            <label for="address-1">Adres</label>
                                            <input type="text" class="form-control" name="Address" id="address" placeholder="Adres" required>
                                        </div>

                                        <div class="col-sm-6 form-group">
                                            <label for="sex">Cinsiyet</label>
                                            <select name="sex" class="form-control browser-default custom-select">
                                                <option value="male">Erkek</option>
                                                <option value="female">Kadın</option>
                                            </select>
                                        </div>
                                        <div class="col-sm-4 form-group">
                                            <label for="tel">Telefon</label>
                                            <input type="tel" name="PhoneNumber" class="form-control" id="phonenumber" placeholder="Numaranızı girin." required>
                                        </div>
                                        <div class="col-sm-4 form-group">
                                            <label for="pass">Şifre</label>
                                            <input type="Password" name="password" class="form-control" id="password" placeholder="Şifrenizi girin." required>
                                        </div>
                                        <div class="col-sm-12 form-group mb-0">
                                            <button class="btn btn-primary float-right">Gönder</button>
                                        </div>
                                    </div>
                                    }
                                    </div>
                        </div>
                        <div class="text-center text-muted mt-3">
                            Hesabın Var mı ? <a href="." tabindex="-1">Giriş Yap</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script>
        $(document).ready(function () {
            $("#SendData").on("click", function (e) {
                e.preventDefault();
                var username = $('#Username').val();
                var password = $('#Password').val();
                var email = $('#email').val();
                var sex = $('sex').val();
                var phonenumber = $('#phonenumber').val();
                var date = $('#Date').val();
                var address = $('#address').val();
                var userlastname = $('#userlastname').val();
                var
                var data = {
                    username,
                    password, sex, phonenumber, date, adress, userlastname
                };
                console.log(data);
                $.ajax({
                    url: '@Url.Action("Register", "Account")',
                    type: 'POST',
                    data: data,
                    success: function (data) {
                        if (data) {
                            window.location.href = "@Url.Action("Login", "Account")";

                        } else alert('sq moruq');
                    }
                });
            });

        });
    </script>
</body>
</html>
